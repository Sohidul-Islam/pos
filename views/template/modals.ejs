<!-- add new product modal -->
<div
  class="modal fade"
  id="addProductModal"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header primary-background text-white">
        <h5 class="modal-title" id="exampleModalLabel">
          <i class="fa fa-tag"></i>
          Add New Product
        </h5>
        <button
          class="close text-white btn btnprimary"
          type="button"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <form class="">
        <div class="modal-body">
          <div class="form-group mb-4">
            <label class="text-dark">Product Type</label>
            <select class="form-control text-primary" required>
              <option disabled selected>
                <sub>Please select a product type</sub>
              </option>
              <option>Speakers</option>
              <option>Card Readers</option>
              <option>Headphones & MICs</option>
              <option>Mousepads</option>
              <option>Mice &amp; Pointing Devices</option>
              <option>Display Monitors</option>
              <option>Keyboards</option>
              <option>Cables & Chargers</option>
              <option>Power Supplies</option>
            </select>
            <small class="float-end text-dark fs-6"
              >Product type not listed here?
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#addProductTypeModal"
                >Add new</a
              >
            </small>
          </div>
          <div class="form-group mb-4">
            <label class="text-dark">Product Brand</label>
            <select class="form-control text-primary" required>
              <option disabled selected>
                <sub>Please select a product brand</sub>
              </option>
              <option>Audionic</option>
              <option>DELL</option>
              <option>HP</option>
              <option>Samsung</option>
              <option>AMB</option>
              <option>Nokia</option>
              <option>Razer</option>
              <option>MSI</option>
            </select>
            <small class="float-end text-dark fs-6"
              >Products brand not listed here?
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#addProductBrandModal"
                >Add new</a
              >
            </small>
          </div>
          <div class="form-group mb-4">
            <label class="text-dark">Product Vendor</label>
            <select class="form-control text-primary" required>
              <option disabled selected>
                <sub>Please select a product vendor</sub>
              </option>
              <option>Haider Abbas</option>
              <option>Muhammad Faisal</option>
              <option>Nouman Aslam</option>
              <option>Anees Ahmad Khan</option>
              <option>Waleed Ahmad</option>
              <option>Abdul Wahid</option>
            </select>
            <small class="float-end text-dark fs-6"
              >Product vendor not listed here?
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#addProductVendorModal"
                >Add new</a
              >
            </small>
          </div>
          <div class="form-group mb-4">
            <label class="text-dark" for="">Product Name</label>
            <input
              type="text"
              class="form-control"
              name=""
              value=""
              placeholder="Enter product name..."
              required
            />
            <small class="text-muted text-aling-left" style="font-size: 12px"
              >Be more specific with product names. Make sure its unique.</small
            >
          </div>
          <div class="form-group">
            <label class="text-dark text-aling-left" for=""
              >Product Price
              <small class="text-muted">(cost/item)</small>
            </label>
            <input
              type="number"
              class="form-control"
              name=""
              value=""
              placeholder="Enter cost of product per item..."
              required
            />
          </div>
          <div class="form-group mb-4">
            <label for=""
              >Product Stock
              <small>(How many products are you adding in stock?)</small>
            </label>
            <input
              type="number"
              class="form-control"
              name=""
              value=""
              placeholder="Enter number of items..."
              required
            />
            <small class="text-muted text-aling-left" style="font-size: 12px"
              >This will be used as product quantity in stock keeping
              unit.</small
            >
          </div>
          <p class="text-dark">How are you paying for this product?</p>
          <div class="form-check">
            <label class="form-check-label text-dark">
              <input
                class="form-check-input"
                type="radio"
                name="exampleRadios"
                id="exampleRadios1"
                value="option1"
                checked
              />
              Store Account
            </label>
          </div>
          <div class="form-check">
            <label class="form-check-label text-dark">
              <input
                class="form-check-input"
                type="radio"
                name="exampleRadios"
                id="exampleRadios2"
                value="option2"
              />
              Other. I don't want to record this epxense.
            </label>
          </div>
          <br />
          <div class="form-group mb-4">
            <label class="text-dark" for=""
              >Description <small class="text-muted">(Optional)</small></label
            >
            <textarea
              name="name"
              class="form-control"
              cols="80"
              height="500"
              placeholder="Add some note or description about this product..."
            ></textarea>
          </div>
          <small class="text-muted"
            ><em>Please double check information before submitting.</em></small
          >
        </div>
        <div class="modal-footer">
          <button
            class="btn btn-secondary"
            type="button"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <input
            type="submit"
            class="btn btnprimary text-white"
            value="Add Product"
          />
        </div>
      </form>
    </div>
  </div>
</div>
