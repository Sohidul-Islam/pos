<%- include('../template/head')-%>

<body>
  <div class="content-box">
    <%- include('../template/sidebar')-%>
    <div class="maincontentbox d-inline-block mx-auto">
      <div class="card my-3">
        <div class="card-header primary-background text-white">
          <h2 class="">Total Sales</h2>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-striped table-hover"
              id="example"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Product Type</th>
                  <th>Qty</th>
                  <th>Price</th>
                  <th>Total</th>
                  <th>Date</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>Product</th>
                  <th>Product Type</th>
                  <th>Qty</th>
                  <th>Cost/item</th>
                  <th>Total</th>
                  <th>Date</th>
                </tr>
              </tfoot>
              <tbody>
                <%for(let i = 0 ; i< result.length ; i++){%>
                <tr>
                  <td><%=result[i].prod_n%></td>
                  <td><%=result[i].prod_n%></td>
                  <td class="text-danger"><%=result[i].qty%></td>
                  <td>&#2547;<%=result[i].selling_p%></td>
                  <td>&#2547;<%=result[i].total%></td>
                  <td><%=result[i].date%></td>
                </tr>
                <%}%>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted">
          Updated yesterday at 11:59 PM
        </div>
      </div>
    </div>
  </div>
  <%- include('../template/footer')-%>
</body>
