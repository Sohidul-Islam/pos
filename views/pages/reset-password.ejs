<%- include('../template/head')-%>

    <body>
        <div class="login-container">

            <div class="wrapper fadeInDown">
                <div id="formContent">
                    <!-- Tabs Titles -->

                    <% if(unauthorizeUser.length> 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%=unauthorizeUser%>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                        </div>

                        <% } if(existMailError.length> 0) { %>
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <%=existMailError%>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } if(successMailChecker.length> 0) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <%=successMailChecker%>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                </div>
                                <% } %>

                                    <!-- Icon -->
                                    <div class="fadeIn first" style="width:80px; margin: 0px auto; padding:15px 0px ;">
                                        <img src="/assets/profile.png" alt="User Icon"
                                            style="width: 100%;border-radius: 50%;" />
                                    </div>

                                    <!-- Login Form -->

                                    <form action="/reset-password" method="POST" id="resetform">
                                        <input type="text" id="login" class="fadeIn second loginbox" name="email"
                                            placeholder="Email">
                                        <input type="password" id="password" class="fadeIn third loginbox"
                                            name="password" placeholder="Old password">
                                        <input type="password" id="new-password" class="fadeIn third loginbox"
                                            name="password1" placeholder="New password">
                                        <input type="password" id="confirm-password" class="fadeIn third loginbox"
                                            name="password2" placeholder="Confirm password">
                                        <input type="submit" class="fadeIn fourth btnprimary loginbtn" value="Reset">
                                    </form>

                                    <!-- Remind Passowrd -->
                                    <div id="formFooter">
                                        <span>No Need?<a class="underlineHover" href="/">Login</a></span>

                                    </div>

                </div>
            </div>
        </div>

    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function () {
            $(".loginbtn").on("click", function postInput() {
                $.ajax({
                    url: "/chartfilter/get-year-month-data",
                    type: "post",
                    dataType: "JSON",
                    data: {
                        month: $(this).val()
                    },
                    success: function (data) {

                        cf.data.labels = lbl2;

                        cf.data.datasets[0].data = jsonConv(data); // or you can iterate for multiple datasets
                        cf.update();
                    },
                    error: function (data) {
                        console.log("month data", data);
                    },
                });
            })


        });


    </script>

    <%- include('../template/footer')-%>