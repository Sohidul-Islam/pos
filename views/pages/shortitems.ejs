<%- include('../template/head')-%>

  <body>
    <div class="content-box">
      <%- include('../template/sidebar')-%>
      <div class="maincontentbox d-inline-block mx-auto">
        <div class="card my-3">
          <div class="card-header primary-background text-white">
            <h2 class="">Short Items</h2>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table
                class="table table-striped table-hover"
                id="example"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Product Type</th>
                    <th>Qty</th>
                    <th>Cost/item</th>
                    <th>Stock Worth</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Product</th>
                    <th>Product Type</th>
                    <th>Qty</th>
                    <th>Cost/item</th>
                    <th>Stock Worth</th>
                  </tr>
                </tfoot>
                <tbody>
                  <%data.forEach((result)=>{%>
                  <tr>
                    <td><%=result.prod_n%></td>
                    <td><%=result.prod_type%></td>
                    <td class="text-danger"><%=result.stock%></td>
                    <td>&#2547;<%=result.selling_p%></td>
                    <td>&#2547;<%=result.worth%></td>
                  </tr>
                  <%})%>
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer small text-muted">
            Updated yesterday at 11:59 PM
          </div>
        </div>
      </div>
    </div>
    <%- include('../template/footer')-%>
  </body>
</html>
