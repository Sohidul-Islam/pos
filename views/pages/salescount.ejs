<%- include('../template/head')-%>

  <body>
    <div class="content-box">
      <%- include('../template/sidebar')-%>
      <div class="maincontentbox d-inline-block mx-auto">
        <div class="card my-3">
          <div class="card-header primary-background text-white">
            <h2 class="">Sales Count</h2>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table
                class="table table-striped table-hover"
                id="example"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Product Type</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Product Type</th>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Status</th>
                  </tr>
                </tfoot>
                <tbody>
                  <%result.forEach((entry)=>{%>
                  <tr>
                    <td><%=entry.prod_n%></td>
                    <td><%=entry.prod_type%></td>
                    <td><%=entry.qty%></td>
                    <td>&#2547;<%=entry.total%></td>
                    <%if(entry.status==="Payment"){%>
                    <td class="text-primary"><%=entry.status%></td>
                    <%} else{%>
                    <td class="text-danger"><%=entry.status%></td>
                    <%}%>
                  </tr>
                  <%});%>
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer small text-muted">
            Updated yesterday at 11:59 PM
          </div>
        </div>
      </div>
    </div>
     <!-- Floating Button -->
     <button
     type="button"
     class="btn calendar-btn"
     data-bs-toggle="modal"
     data-bs-target="#exampleModal"
   >
     <i class="fas fa-calendar-alt calendar-icon"></i>
   </button>

   <div
     class="modal fade"
     id="exampleModal"
     tabindex="-1"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true"
   >
     <div class="modal-dialog">
       <div class="modal-content">
         <div class="calendar">
           <div class="calendar-header">
             <span class="month-picker" id="month-picker">February</span>
             <div class="year-picker">
               <span class="year-change" id="prev-year">
                 <pre><</pre>
               </span>
               <span id="year">2021</span>
               <span class="year-change" id="next-year">
                 <pre>></pre>
               </span>
             </div>
           </div>
           <div class="calendar-body">
             <div class="calendar-week-day">
               <div>Sun</div>
               <div>Mon</div>
               <div>Tue</div>
               <div>Wed</div>
               <div>Thu</div>
               <div>Fri</div>
               <div>Sat</div>
             </div>
             <div class="calendar-days"></div>
           </div>
           <div class="month-list"></div>
         </div>
       </div>
     </div>
   </div>

    <%- include('../template/footer')-%>
  </body>
</html>
