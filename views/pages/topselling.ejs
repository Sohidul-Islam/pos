<%- include('../template/head')-%>

<body>
  <div class="content-box">
    <%- include('../template/sidebar')-%>
    <div class="maincontentbox d-inline-block mx-auto">
      <div class="card my-3">
        <div class="card-header primary-background text-white">
          <h2 class="">Top Selling Product</h2>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-striped table-hover"
              id="example"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>Product Type</th>
                  <th>Product</th>
                  <th>Qty</th>
                  <th>Cost/item</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th>Product Type</th>
                  <th>Product</th>
                  <th>Qty</th>
                  <th>Cost/item</th>
                </tr>
              </tfoot>
              <tbody>
                <%result.forEach((entry)=>{%>
                <tr>
                  <td><%=entry.prod_type%></td>
                  <td><%=entry.prod_n%></td>
                  <td class="text-danger"><%=entry.qty%></td>
                  <td>&#2547;<%=entry.selling_p%></td>
                </tr>
                <%})%>
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted">
          Updated yesterday at 11:59 PM
        </div>
      </div>
    </div>
  </div>

  <%- include('../template/footer')-%>
</body>
